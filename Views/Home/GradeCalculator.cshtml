@{
    ViewBag.Title = "Grade Calculator";
}
<div class="center">
    <table class="calculator">
        <thead>
            <tr>
                <td>Category</td>
                <td>Weight</td>
                <td>Your Grade*</td>
            </tr>
        </thead>
        <tr>
            <td colspan="3">&nbsp;</td>
        </tr>
        <tr>
            <td><label>Assignments</label></td>
            <td>50%</td>
            <td><input id="assignments" type="text" /> %</td>
        </tr>
        <tr>
            <td><label>Group Project</label></td>
            <td>10%</td>
            <td><input id="projects" type="text" /> %</td>
        </tr>
        <tr>
            <td><label>Quizzes</label></td>
            <td>10%</td>
            <td><input id="quizzes" type="text" /> %</td>
        </tr>
        <tr>
            <td><label>Exams</label></td>
            <td>20%</td>
            <td><input id="exams" type="text" /> %</td>
        </tr>
        <tr>
            <td><label>INTEX</label></td>
            <td>10%</td>
            <td><input id="intex" type="text" /> %</td>
        </tr>
    </table>
    <br />
    <div id="finalGradeBox" style="font-size:16pt;" hidden>
        <span>Final Grade: </span><span id="finalGrade"></span>
        <br /><br />
    </div>
    <input id="calc" class="button" type="button" value="Calculate" />
    <br />
    <br />
    <span>* Please input grades in percent form without the % sign</span>
</div>